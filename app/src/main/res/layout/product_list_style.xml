<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_id1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingStart="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingEnd="8dp"/>
    <TextView
        android:id="@+id/txt_id1"
        android:textSize="17sp"
        android:layout_toRightOf="@+id/img_id1"
        android:layout_marginTop="15sp"
        android:text="Product Name"
        android:fontFamily="sans-serif"
        android:textColor="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sales_txt_id2"
        android:layout_toRightOf="@+id/img_id1"
        android:textStyle="bold"
        android:text="Sale Price $"
        android:textColor="@color/primary_text"
        android:layout_below="@+id/txt_id1"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_id2"
        android:layout_toEndOf="@+id/sales_txt_id2"
        android:fontFamily="monospace"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:text="Sale Price "
        android:textColor="@color/primary_text"
        android:layout_below="@+id/txt_id1"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_id3"
        android:textColor="@color/secondary_text"
        android:text="Availability"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/img_id1"
        android:layout_below="@id/txt_id2"/>
</RelativeLayout>